{
  "id": "org.groestlcoin.groestlcoin-qt",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "19.08",
  "command": "groestlcoin-qt",
  "finish-args": [
    /* Wayland and Xorg support */
    "--socket=x11",
    "--socket=wayland",
    /* Sound */
    "--socket=pulseaudio",
    /* OpenGL access. */
    "--device=dri",
    /* IPC access. */
    "--share=ipc",
    /* Network acess. */
    "--share=network"
  ],
  "modules": [
    {
      "name": "groestlcoin-core",
      "buildsystem": "simple",
      "build-commands": [
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoind",
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoin-qt",
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoin-cli"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": ["x86_64"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v2.19.1/groestlcoin-2.19.1-x86_64-linux-gnu.tar.gz",
          "sha256": "0646cae023a0be0821f357d33bdbf81fc05fc9a9e3e9d4e5936d5053f1a988d4"
        },
        {
          "type": "archive",
          "only-arches": ["arm"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v2.19.1/groestlcoin-2.19.1-arm-linux-gnueabihf.tar.gz",
          "sha256": "218218b18b49d924fc4085545ed71a59a985dbecdc2dab48c401d3ac622f10d4"
        },
        {
          "type": "archive",
          "only-arches": ["aarch64"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v2.19.1/groestlcoin-2.19.1-aarch64-linux-gnu.tar.gz",
          "sha256": "f151cfada51e981db2cb90e78f50e13ba3c64640339f41d4f212d428df8ca1bf"
        }
      ]
    },
    {
      "name": "misc",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dp -m 644 org.groestlcoin.groestlcoin-qt.desktop /app/share/applications/org.groestlcoin.groestlcoin-qt.desktop",
        "install -Dp -m 644 groestlcoin.svg /app/share/icons/hicolor/scalable/apps/org.groestlcoin.groestlcoin-qt.svg",
        "install -Dp -m 644 org.groestlcoin.groestlcoin-qt.metainfo.xml /app/share/metainfo/org.groestlcoin.groestlcoin-qt.metainfo.xml",
        "bash install_wrappers.sh"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.groestlcoin.groestlcoin-qt.desktop"
        },
        {
          "type": "file",
          "path": "org.groestlcoin.groestlcoin-qt.metainfo.xml"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/Groestlcoin/groestlcoin/2.19.1/src/qt/res/src/groestlcoin.svg",
          "sha256": "a10bfc28ed6e4fb494743986858e03cba08514572e1b22e1bf17a7f5080d591f"
        },
        {
          "type": "file",
          "path": "install_wrappers.sh"
        }
      ]
    }
  ]
}
