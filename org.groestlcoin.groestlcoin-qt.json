{
  "id": "org.groestlcoin.groestlcoin-qt",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "19.08",
  "command": "groestlcoin-qt",
  "finish-args": [
    /* Wayland and Xorg support */
    "--socket=x11",
    "--socket=wayland",
    /* Sound */
    "--socket=pulseaudio",
    /* OpenGL access. */
    "--device=dri",
    /* IPC access. */
    "--share=ipc",
    /* Network acess. */
    "--share=network"
  ],
  "modules": [
    {
      "name": "groestlcoin-core",
      "buildsystem": "simple",
      "build-commands": [
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoind",
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoin-qt",
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoin-cli"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": ["x86_64"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v2.21.0/groestlcoin-2.21.0-x86_64-linux-gnu.tar.gz",
          "sha256": "cc01c2d8a3f5e6730e931fdc579658aff74d9618adadee095bea06da54e75d5b"
        },
        {
          "type": "archive",
          "only-arches": ["arm"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v2.21.0/groestlcoin-2.21.0-arm-linux-gnueabihf.tar.gz",
          "sha256": "f30efd6b030aba45bb4a1a8ca4b8fd0d8fc5f60c141704016af9b206ef27b5bf"
        },
        {
          "type": "archive",
          "only-arches": ["aarch64"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v2.21.0/groestlcoin-2.21.0-aarch64-linux-gnu.tar.gz",
          "sha256": "0d6c944ecbea6f7247f4c3c3d517a52d32bf4dd8d5fe7e2697aa4f9c3bd6ac64"
        }
      ]
    },
    {
      "name": "misc",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dp -m 644 org.groestlcoin.groestlcoin-qt.desktop /app/share/applications/org.groestlcoin.groestlcoin-qt.desktop",
        "install -Dp -m 644 groestlcoin.svg /app/share/icons/hicolor/scalable/apps/org.groestlcoin.groestlcoin-qt.svg",
        "install -Dp -m 644 org.groestlcoin.groestlcoin-qt.metainfo.xml /app/share/metainfo/org.groestlcoin.groestlcoin-qt.metainfo.xml",
        "bash install_wrappers.sh"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.groestlcoin.groestlcoin-qt.desktop"
        },
        {
          "type": "file",
          "path": "org.groestlcoin.groestlcoin-qt.metainfo.xml"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/Groestlcoin/groestlcoin/2.21.0/src/qt/res/src/groestlcoin.svg",
          "sha256": "a10bfc28ed6e4fb494743986858e03cba08514572e1b22e1bf17a7f5080d591f"
        },
        {
          "type": "file",
          "path": "install_wrappers.sh"
        }
      ]
    }
  ]
}
